{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "main.py" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/static/(.*)", "dest": "/static/$1" }
  ]
}